<?xml version="1.0" encoding="UTF-8"?>
<interface>
	<template class="AtbWelcomeWidget">
		<property name="layout-manager">
			<object class="GtkBoxLayout">
				<property name="spacing">70</property>
				<property name="orientation">vertical</property>
			</object>
		</property>
		<child>
			<object class="GtkFrame">
				<property name="margin-top">0</property>
				<style>
					<class name="CssAppIcon"/>
				</style>
			</object>
		</child>
		<child>
			<object class="GtkLabel">
				<property name="label" translatable="yes">Welcome to application Aurora Toolbox!</property>
				<property name="wrap">true</property>
				<property name="justify">center</property>
				<style> <class name="CssWelcomeText"/></style>
			</object>
		</child>
		<child>
			<object class="GtkBox" id="IdGroupLoading">
				<property name="visible">False</property>
				<property name="halign">center</property>
				<property name="valign">center</property>
				<property name="orientation">vertical</property>
				<property name="spacing">24</property>
				<child>
					<object class="GtkLabel">
						<property name="label" translatable="yes">Search Aurora CLI...</property>
						<property name="wrap">true</property>
						<property name="justify">center</property>
						<style> <class name="CssInfoText"/></style>
					</object>
				</child>
				<child>
					<object class="GtkSpinner">
						<property name="margin-top">18</property>
						<property name="margin-bottom">18</property>
						<property name="spinning">True</property>
						<property name="halign">center</property>
						<property name="valign">center</property>
						<property name="width-request">40</property>
						<property name="height-request">40</property>
					</object>
				</child>
			</object>
		</child>
		<child>
			<object class="GtkBox" id="IdGroupNotFound">
				<property name="visible">False</property>
				<property name="orientation">vertical</property>
				<property name="spacing">24</property>
				<child>
					<object class="GtkLabel">
						<property name="label" translatable="yes">Aurora CLI not found.</property>
						<property name="wrap">true</property>
						<property name="justify">center</property>
						<style> <class name="CssInfoText"/></style>
					</object>
				</child>
				<child>
					<object class="GtkBox" id="IdSubgroupUbuntu">
						<property name="visible">False</property>
						<property name="halign">center</property>
						<property name="valign">center</property>
						<property name="orientation">vertical</property>
						<property name="spacing">24</property>
						<child>
							<object class="GtkButton" id="IdInstallBtn">
								<property name="halign">center</property>
								<property name="valign">center</property>
								<property name="child">
									<object class="AdwButtonContent">
									<property name="icon-name">document-save-symbolic</property>
									<property name="label" translatable="yes">Install</property>
									</object>
								</property>
							</object>
						</child>
						<child>
							<object class="GtkSpinner" id="IdInstallLoading">
								<property name="visible">False</property>
								<property name="spinning">True</property>
								<property name="halign">center</property>
								<property name="valign">center</property>
								<property name="width-request">40</property>
								<property name="height-request">40</property>
							</object>
						</child>
					</object>
				</child>
				<child>
					<object class="GtkBox" id="IdSubgroupLinux">
						<property name="halign">center</property>
						<property name="valign">center</property>
						<property name="orientation">vertical</property>
						<property name="spacing">24</property>
						<child>
							<object class="GtkLabel">
								<property name="label" translatable="yes">Application installation is required.</property>
								<property name="wrap">true</property>
								<property name="justify">center</property>
							</object>
						</child>
						<child>
							<object class="GtkButton" id="IdDocumentationBtn">
								<property name="halign">center</property>
								<property name="valign">center</property>
								<property name="child">
									<object class="AdwButtonContent">
									<property name="icon-name">view-dual-symbolic</property>
									<property name="label" translatable="yes">Documentation</property>
									</object>
								</property>
							</object>
						</child>
					</object>
				</child>
			</object>
		</child>
		<child>
			<object class="GtkBox" id="IdGroupAuroraCLI">
				<property name="visible">False</property>
				<property name="halign">center</property>
				<property name="valign">center</property>
				<property name="orientation">vertical</property>
				<property name="spacing">24</property>
				<child>
					<object class="GtkLabel">
						<property name="label" translatable="yes">Connection successful!</property>
						<property name="wrap">true</property>
						<property name="justify">center</property>
						<style> <class name="CssInfoText"/></style>
					</object>
				</child>
				<child>
					<object class="GtkBox">
						<property name="halign">center</property>
						<property name="valign">center</property>
						<property name="orientation">horizontal</property>
						<property name="spacing">6</property>
						<child>
							<object class="GtkLabel">
								<property name="label">Aurora CLI</property>
								<property name="wrap">true</property>
								<property name="justify">center</property>
							</object>
						</child>
						<child>
							<object class="GtkLabel" id="IdAuroraCLIVersion">
								<property name="label">v1.0.0</property>
								<property name="wrap">true</property>
								<property name="justify">center</property>
							</object>
						</child>
					</object>
				</child>
				<child>
					<object class="GtkButton" id="IdToolsBtn">
						<property name="halign">center</property>
						<property name="valign">center</property>
						<property name="child">
							<object class="AdwButtonContent">
							<property name="icon-name">view-list-symbolic</property>
							<property name="label" translatable="yes">Tools</property>
							</object>
						</property>
					</object>
				</child>
			</object>
		</child>
	</template>
</interface>
